generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_URL") // uses connection pooling
}

model User {
  id                  Int            @id @default(autoincrement())
  isAdmin             Boolean?
  isVolt              Boolean?
  isCoordAutist       Boolean?
  isCoordMulher       Boolean?
  isCoordSaude        Boolean?
  isCoordProtagonista Boolean?
  isCoordAlimentar    Boolean?
  isCoordPasse        Boolean?
  isCoordCidadania    Boolean?
  avatar              String?
  nome                String
  idade               String
  phone               String
  address             String
  bairro              String
  cpf                 String
  nis                 String
  email               String
  filhos              Filho[]
  password            String
  question1           Boolean?
  question2           String?
  createAt            DateTime       @default(now())
  Solicitations       Solicitations? @relation(fields: [solicitationsId], references: [id])
  solicitationsId     Int?
}

model Filho {
  id       Int     @id @default(autoincrement())
  nome     String
  cpf      String
  idade    Int
  isAutist Boolean
  isPcd    Boolean
  User     User?   @relation(fields: [userId], references: [id])
  userId   Int?
}

model Solicitations {
  id       Int      @id @default(autoincrement())
  nome     String
  cpf      String
  service  String
  status   String
  pasta    String
  userInfo User[]
  createAt DateTime @default(now())
  updateAt DateTime @default(now())
}

model Aprovados {
  id       Int      @id @default(autoincrement())
  date     String
  nome     String
  cpf      String
  service  String
  status   String
  createAt DateTime @default(now())
}

model Notices {
  id       Int      @id @default(autoincrement())
  date     String
  title    String
  mensagem String
  img      String
  createAt DateTime @default(now())
  updateAt DateTime @default(now())
}
