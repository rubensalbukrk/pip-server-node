generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_URL")
}

model User {
  id                  Int            @id @default(autoincrement())
  isAdmin             Boolean?
  isVolt              Boolean?
  isCoordAutist       Boolean?
  isCoordMulher       Boolean?
  isCoordSaude        Boolean?
  isCoordProtagonista Boolean?
  isCoordAlimentar    Boolean?
  isCoordPasse        Boolean?
  isCoordCidadania    Boolean?
  avatar              String?
  nome                String
  idade               String
  phone               String
  address             String
  bairro              String
  cpf                 String
  nis                 String
  email               String
  password            String
  question1           Boolean?
  question2           String?
  createAt            DateTime       @default(now())
  solicitationsId     Int?
  parents             Parentes[]
  Solicitations       Solicitations? @relation(fields: [solicitationsId], references: [id])
}

model Parentes {
  id       Int     @id @default(autoincrement())
  nome     String
  cpf      String
  idade    Int
  isAutist Boolean
  isPcd    Boolean
  userId   Int?
  User     User?   @relation(fields: [userId], references: [id])
}

model Solicitations {
  id       Int      @id @default(autoincrement())
  nome     String
  cpf      String
  service  String
  status   String
  pasta    String
  createAt DateTime @default(now())
  updateAt DateTime @default(now())
  userInfo User[]
}

model Aprovados {
  id       Int      @id @default(autoincrement())
  date     String
  nome     String
  cpf      String
  service  String
  status   String
  createAt DateTime @default(now())
}

model Notices {
  id       Int      @id @default(autoincrement())
  date     String
  title    String
  mensagem String
  img      String
  createAt DateTime @default(now())
  updateAt DateTime @default(now())
}
